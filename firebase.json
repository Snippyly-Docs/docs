{
    "functions": {
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ],
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ],
        "codebase": "snippyly-docs-demo-functions",
        "source": "functions"
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "database": {
            "port": 9000
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    }
}